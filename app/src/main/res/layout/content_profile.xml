<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.oneflaretech.kiakia.activities.ProfileActivity"
    tools:showIn="@layout/activity_profile_view">

    <LinearLayout
        android:id="@+id/detailsregistration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/logo"
        android:paddingRight="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name"
            style="@style/edit_text"
            android:hint="Name"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/age"
            style="@style/edit_text"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="Date of Birth" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:background="@drawable/spinner"
            android:visibility="gone"
            android:textSize="12sp"/>

        <LinearLayout
            android:id="@+id/linearLayoutGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registertype"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:hint="Regular User"
                android:background="@drawable/spinner"
                android:textSize="12sp"/>



            <TextView
                android:id="@+id/female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginBottom="25dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="Expert"
                android:background="@drawable/spinner"
                android:textSize="12sp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/phone"
            style="@style/edit_text"
            android:hint="Mobile Number"/>


        <EditText
            android:id="@+id/email"
            android:enabled="false"
            style="@style/edit_text"
            android:hint="Email"/>


        <android.support.v7.widget.AppCompatButton
            app:elevation="10dp"
            android:id="@+id/update"
            style="@style/button"
            android:text="Update" />

        <android.support.v7.widget.AppCompatButton
            app:elevation="10dp"
            android:id="@+id/review"
            android:visibility="gone"
            style="@style/button"
            android:text="Reviews" />


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
